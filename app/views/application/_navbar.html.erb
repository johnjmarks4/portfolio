      <div class="button_transform">
        <%= link_to "HOME", root_path, class: "text_display" %>
      </div>
    <% end -%>
    <%= content_tag(:div, class: "buttons", id: on_page("about")) do -%>
      <div class="button_transform">
        <%= link_to "ABOUT", about_path, class: "text_display" %>
      </div>
    <% end -%>
    <%= content_tag(:div, class: "buttons", id: on_page("skills")) do -%>
      <div class="button_transform">
        <%= link_to "SKILLS", skills_path, class: "text_display" %>
      </div>
    <% end %>
    <%= content_tag(:div, class: "buttons", id: on_page("my_work")) do -%>
      <div class="button_transform">
        <%= link_to "MY WORK", my_work_path, class: "text_display" %>
      </div>
    <% end -%>
    <%= content_tag(:div, class: "buttons", id: on_page("contact")) do -%>
      <div class="button_transform">
        <%= link_to "CONTACT", contact_path, class: "text_display" %>
      </div>
    <% end -%>
  </nav>
</div>

<ul>
  <li id="twitter"><%= link_to "", "https://twitter.com/johnjmarks" %></li>
